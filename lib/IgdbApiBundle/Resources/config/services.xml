<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="GuzzleHttp\ClientInterface" alias="GuzzleHttp\Client"/>

        <service id="en_igdb_api.wrapper" class="EN\IgdbApiBundle\Igdb\IgdbWrapper">
            <argument type="string"/>
            <argument type="string"/>
            <argument type="service" id="GuzzleHttp\ClientInterface"/>
            <argument type="service" id="en_igdb_api.parameter.factory"/>
        </service>
        <service id="EN\IgdbApiBundle\Igdb\IgdbWrapper" alias="en_igdb_api.wrapper"/>
        <service id="EN\IgdbApiBundle\Igdb\IgdbWrapperInterface" alias="en_igdb_api.wrapper"/>

        <service id="en_igdb_api.parameter.builder" class="EN\IgdbApiBundle\Igdb\Parameter\ParameterBuilder"/>
        <service id="EN\IgdbApiBundle\Igdb\Parameter\ParameterBuilder" alias="en_igdb_api.parameter.builder"/>

        <service id="en_igdb_api.parameter.collection" class="EN\IgdbApiBundle\Igdb\Parameter\AbstractParameterCollection">
            <argument type="service" id="en_igdb_api.parameter.builder"/>
        </service>
        <service id="EN\IgdbApiBundle\Igdb\Parameter\AbstractParameterCollection" alias="en_igdb_api.parameter.collection"/>

        <service id="en_igdb_api.parameter.factory" class="EN\IgdbApiBundle\Igdb\Parameter\Factory\ParameterCollectionFactory">
            <argument type="service" id="en_igdb_api.parameter.builder"/>
        </service>
        <service id="EN\IgdbApiBundle\Igdb\Parameter\Factory\ParameterCollectionFactory"
                 alias="en_igdb_api.parameter.factory"/>
    </services>
</container>