{% extends 'base.html.twig' %}

{% block title %}Log In{% endblock %}

{% block body %}
    {% embed 'default/form_container.html.twig' %}
        {% block form_title %}Log In{% endblock %}
        {% block form_body %}
            {% if error %}
                <div class="alert alert-danger" role="alert">
                    <span class="form-error-icon badge badge-danger text-uppercase">DANGER</span>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            <form class="mb-4" method="post">
                <div class="form-group">
                    <label for="username" class="required">Username</label>
                    <input id="username"
                           name="username"
                           value="{{ last_username }}"
                           class="form-control"
                           type="text"
                           required>
                </div>
                <div class="form-group">
                    <label for="password" class="required">Password</label>
                    <input id="password"
                           name="password"
                           class="form-control"
                           type="password"
                           required>
                </div>
                <div class="form-group">
                    <div class="form-check-inline">
                        <input id="_remember_me"
                               name="_remember_me"
                               class="form-check-input"
                               value="1"
                               type="checkbox">
                        <label class="form-check-label"
                               for="_remember_me">
                            Remember Me
                        </label>
                    </div>
                    <a href="{{ path('user_reset_password') }}">Forgot Password?</a>
                </div>
                <div class="form-group">
                    <button type="submit"
                            class="btn-primary btn">
                        Log In
                    </button>
                </div>
                <input name="login_token" value="{{ csrf_token("authenticate") }}" type="hidden">
            </form>
            <hr>
            <p>Don't have an account?</p>
            <a href="{{ path('user_signup') }}" class="btn btn-primary">Sign Up</a>
        {% endblock %}
    {% endembed %}
{% endblock %}



