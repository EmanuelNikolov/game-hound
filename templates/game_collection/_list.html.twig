<div class="collections-container">
    <table class="table table-dark">
        <tbody>
        {% for game_collection in pagination %}
            <tr>
                <td>
                    {% block game_collection_link %}
                        <a class="h5 text-truncate"
                           href="{{ path('game_collection_show', {'id': game_collection.id}) }}">
                            {{ game_collection.name }}
                        </a>
                    {% endblock %}
                </td>
            </tr>
        {% else %}
            <tr>
                {% block _list_empty %}
                    <td>No collections added yet :(</td>
                {% endblock %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(pagination) }}
</div>