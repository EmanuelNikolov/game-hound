<form class="d-inline-block form-inline"
      method="post"
      action="{{ path('game_collection_delete', {'id': game_collection.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this collection?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ game_collection.id) }}">
    <button class="btn btn-primary">Delete Collection</button>
</form>