{% extends 'base.html.twig' %}

{% block title %}Games{% endblock %}

{% block body %}
    <div class="text-center">
        <h1>{{ game.name }}</h1>
        <img alt="{{ game.name }}" src="{{ game.coverUrl('cover_uniform') }}">
        <p>Release Date: {{ game.firstReleaseDate|date("d F Y") }}</p>
        <p>{{ game.summary }}</p>
    </div>
{% endblock %}