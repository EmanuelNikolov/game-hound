{% extends 'base.html.twig' %}

{% block title %}{{ game.name }}{% endblock %}

{% block body %}
    <div class="row mx-0 mx-xl-5">
        <div class="col-xs-12 col-md-3 mb-4">
            <img class="img-fluid rounded" alt="{{ game.name }}" src="{{ game.coverUrl('cover_big') }}">
        </div>
        <div class="col-xs-12 col-md-8">
            <h1>{{ game.name }}</h1>
            <p>Release Date: {{ game.firstReleaseDate|date("d F Y") }}</p>
            <p>{{ game.summary }}</p>
        </div>
    </div>
{% endblock %}