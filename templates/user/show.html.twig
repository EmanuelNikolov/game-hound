{% extends 'base.html.twig' %}

{% block title %}{{ user.username }}'s Profile{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12 col-lg-5 mx-auto">
            <h2>
                Profile Information
                {% if user.equalTo(app.user) %}
                    <a href="{{ path('user_edit') }}" class="btn btn-primary btn-sm m-2">
                        Edit Profile
                    </a>
                {% endif %}
            </h2>

            <table class="table table-dark">
                <tbody>
                <tr>
                    <th scope="row">Username</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th scope="row">Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th scope="row">Collections Count</th>
                    <td>{{ user.gameCollections|length }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="col-xs-12 col-lg-7 mx-auto">
            <h2>{{ user.username }}'s Collections
                {% if user.equalTo(app.user) %}
                    <a href="{{ path('game_collection_new') }}"
                       class="btn btn-primary btn-sm m-2">
                        Create a Collection
                    </a>
                {% endif %}
            </h2>
            {{ include('game_collection/_list.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('js/collection') }}
{% endblock %}
