{% extends 'base.html.twig' %}

{% block title %}
    {{ user.username }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12 col-md-4">
            <h2 class="mb-4">Profile Information</h2>
            <table class="table table-dark">
                <tbody>
                <tr>
                    <th scope="row">Username</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th scope="row">Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th scope="row">Collections Count</th>
                    <td>{{ user.gameCollections|length }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="col-xs-12 col-md-8">
            <h2 class="mb-4">{{ user.username }}'s Collections</h2>
            {{ include('game_collection/_list.html.twig', {'game_collections': user.gameCollections}) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('js/collection') }}
{% endblock %}